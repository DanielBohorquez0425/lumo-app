---
import { getUsers } from "../lib/api";

interface User {
  id: number;
  name: string;
  email: string;
}

// Fetch en el servidor
const users = await getUsers().then((users) =>
  users.map((user) => ({
    id: user.id,
    name: user.name,
    email: user.email,
  }))
);
---

<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6 text-blue-600">Lista de Usuarios</h1>

  <div class="bg-white shadow rounded-lg overflow-hidden">
    <ul class="divide-y divide-gray-200">
      {
        users.map((user: any) => (
          <li class="px-6 py-4 hover:bg-gray-50 transition-colors">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold">
                {user.name.charAt(0)}
              </div>
              <div class="ml-4">
                <p class="text-sm font-medium text-gray-900">{user.name}</p>
                <p class="text-sm text-gray-500">{user.email}</p>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</div>
